<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.framework.mybatiesDemo.dao.OrdersDao">
    <!-- 根据id获取用户信息 -->
    <select id="payOrder" parameterType="int" resultType="com.framework.mybatiesDemo.model.Orders">
        update orders set number = number - 1 where id = #{id}

    </select>
</mapper>